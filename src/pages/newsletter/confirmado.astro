---
import { SITE_TITLE, TITLE_NEWSLETTER, SITE_DESCRIPTION } from '@/consts';
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title={SITE_TITLE + ' | ' + TITLE_NEWSLETTER} description={SITE_DESCRIPTION}>
	<div class='container text-center'>
		<div class='p-4'>
			<h1 class='text-5xl font-bold my-4'>¡Gracias por suscribirte a nuestra newsletter!</h1>
			<p class='text-xl'>
				Estamos emocionados de tenerte a bordo. <br />
				Pronto recibirás un correo de confirmación. Si no lo ves, revisa tu carpeta de spam o promociones.
			</p>
			<br />
			<div class='mt-6'>
				<a href='/' class='inline-block bg-yellow-700 text-white py-3 px-6 rounded-lg hover:bg-yellow-800 transition duration-300 mt-4'>
					Volver al inicio
				</a>
			</div>
		</div>
	</div>
</BaseLayout>
