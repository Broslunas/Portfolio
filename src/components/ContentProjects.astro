---
interface Project {
    name: string;
    description: string;
    link: {
        url?: string;
        target?: string;
        title?: string;
        buttonLabel?: string;
    };
};

const projects: Project[] = [
{
        name: 'Videos',
        description: 'Sitio web para ver Series y Pel√≠culas completamente gratis.',
        link: {
            url: 'https://videos.broslunas.com/',
        },
    }, {
        name: 'Games',
        description: 'Proyectos creados en su mayoria con puro HTML, CSS y JS.',
        link: {
            url: 'https://games.broslunas.com/',
        },
    }, {
        name: 'Blog',
        description: 'Mi blog personal, creado con Astro.',
        link: {
            url: 'https://blog.broslunas.com/',
        },
    }
];
---

<div>

    <!-- <h2 class="text-2xl font-bold text-white mb-4">Latest Projects</h2> -->

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

        {projects.map(project =>

            <div class="flex flex-col justify-center items-start border border-gray-700 rounded-lg p-4 bg-black">

                <h3 class="text-xl font-semibold text-white mb-2">
                    {project.name}
                </h3>

                <p class="text-gray-400">
                    {project.description}
                </p>

                {
                    project.link?.url ?
                        <a
                            href={project.link.url}
                            title={project.link.title || project.name}
                            target={project.link.target || '_blank'}
                            class="
                                w-full px-4 py-2.5 mt-4 text-center

                                border border-gray-600 rounded-lg

                                hover:text-primary
                                hover:border-primary
                            ">
                            {project.link.buttonLabel || 'Abrir Proyecto'}
                        </a>
                    : null
                }

            </div>

        )}

    </div>

</div>
